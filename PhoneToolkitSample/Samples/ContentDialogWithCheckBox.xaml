<toolkit:ContentDialog
    x:Class="PhoneToolkitSample.Samples.ContentDialogWithCheckBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Would you like to rate and review this application?"
    TitleTemplate="{StaticResource ContentDialogTitleTemplate}"
    PrimaryButtonText="ok"  
    SecondaryButtonText="cancel">
    
    <StackPanel>
        <TextBlock Style="{StaticResource MessageDialogContentStyle}">
            Thank you for trying out the Windows Phone Toolkit.<LineBreak/>
            <LineBreak/>
            We would really like to hear what you think about it. Would you mind spending a couple of minutes to rate and review this application in the Store?
        </TextBlock>
        <CheckBox x:Name="checkBox"
                  Content="Do not ask me again"
                  Margin="0,-16,0,16"/>
    </StackPanel>
</toolkit:ContentDialog>